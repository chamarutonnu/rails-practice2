<h2>User info</h2>

<% if @user.errors.any? %>
<p><%=@user.errors.full_messages.length%> errors prohibited this obj from being saved:</p>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@user) do |f| %>
    <div class="form-group has-icon">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true %>
        <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
    </div>

    <div class="form-group has-icon">
    <div class="user-edit-image">

    </div>
    <%= f.label :profile_image, "Image" %>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
</div>
<div class="field">
    <%= f.label :introduction %>
    <%=f.text_area :introduction %>
  </div>

    <%= f.submit "Update User" %>
<% end %>